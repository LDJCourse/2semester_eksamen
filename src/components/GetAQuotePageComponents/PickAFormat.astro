<div class="container">
    <h2>Pick a format:</h2>
    <div class="formats">
        <button class="format" data-format="7">7'' Single</button>
        <button class="format" data-format="10">10'' Single</button>
        <button class="format" data-format="12-double">12'' Double LP</button>
        <button class="format" data-format="12-ep">12'' EP/LP</button>
    </div>
</div>
<style>
	.container {
        text-align: center;
        padding: 20px;
    }

    .formats {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 10px;
        margin-top: 20px;
    }
    
    .format {
        all: unset;
        border: none;
        padding: 10px 20px;
        font-size: 1em;
        border-radius: 5px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .format.active {
        color: var(--accent-color);
    }   
	
</style>



