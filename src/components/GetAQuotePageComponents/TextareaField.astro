---
import FormButton from "../ReusableComponents/FormButton.astro";
---

<section class="container">
  <h1>Message:</h1>
  <textarea name="" id="" placeholder="Please let us know more about your order"
  ></textarea>
  <FormButton title="Submit order" />
</section>
<style>
  .container {
    padding: 20px;
    display: flex;
    flex-direction: column;
    /* align-items: center; */
    width: 100%;
  }

  textarea {
    height: 100px;
    border: 1px solid #686868;
    resize: none;
    padding: 10px 5px;
  }

  textarea:focus {
    outline: none;
  }

  textarea::placeholder {
    color: var(--primary-color);
    font-size: 20px;
  }

  @media (min-width: 768px) {
    textarea {
      width: 100%;
      height: 150px;
    }
  }
</style>

