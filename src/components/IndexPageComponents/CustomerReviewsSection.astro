---
import CustomerReview from "./CustomerReview.astro";
---

<section class="reviewSection">
  <h1>WHAT OUR CUSTOMERS SAY?</h1>
  <div class="customer_reviews_container">
    <img src="/google_review_frame.svg" class="review_desktop" alt="" />
    <div class="mobile_review_wrapper">
      <img src="/google_review_mobile.svg" alt="" class="gReviewMobile" />
      <img src="/google_stars_mobile.svg" alt="" class="gStars" />
    </div>
  </div>
</section>
<style>
  .reviewSection {
    height: 100vh;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 32px;
  }
  .customer_reviews_container {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 80%;
  }

  .mobile_review_wrapper {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 100%;
    height: auto;
    gap: 32px;
  }

  .gStars {
    width: 80%;
  }

  .review_desktop {
    display: none;
  }

  h1 {
    text-align: center;
    color: var(--secondary-color);
  }

  section {
    padding: 20px;
  }

  @media (min-width: 768px) {
    .customer_reviews_container {
      width: 66%;
    }
    .mobile_review_wrapper {
      display: none;
    }
  }
</style>
