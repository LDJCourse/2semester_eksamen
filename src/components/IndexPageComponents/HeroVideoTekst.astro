---
import Knap from "../ReusableComponents/KnapPrimary.astro";
---

<section class="text_wrapper">
  <div class="text_container">
    <h1>RPM RECORDS</h1>
    <div class="h2div">
      <h2>SCANDINAVIAN SUSTAINABILITY</h2>
      <h2 id="landingH2">PRESSED WITH PASSION</h2>
      <Knap tekst="Read More" farve="roed" tekstFarve="sortTekst" href="/sustainability" />
    </div>
  </div>
</section>

<style>
  .text_container {
    padding: 16px;
    color: var(--secondary-color);
    text-align: center;
    margin: auto;
    height: auto;
    width: 100%;
  }

  h1 {
    color: var(--accent-color);
    font-size: clamp(80px, 10vw, 120px);
    font-family: "fjalla_one", sans-serif;
    font-weight: 400;
  }
  .text_wrapper {
    height: 100vh;
    width: 100vw;
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
  }

  #landingH2 {
    margin-bottom: 24px;
  }

  @media (min-width: 768px) {
    .text_wrapper {
      height: calc(100vh - 80px);
      width: 100vw;
      display: flex;
      flex-direction: column;
      align-items: flex-start;
      justify-content: flex-end;
    }

    .text_container {
      margin: 0;
      text-align: left;
      height: auto;
      width: 100%;
      padding: 0 0 80px 40px;
    }
  }
</style>
