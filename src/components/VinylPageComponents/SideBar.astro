---
import "/src/styles/global.css";
---

<div class="sidebarcontainer">
  <h2>Find a Topic:</h2>
  <div class="sidebarlink_wrapper">
    <slot />
  </div>
</div>

<style>
  .sidebarcontainer {
    position: fixed;
    background-color: #fff;
    grid-column: 1 / 2;
    height: 100%;
    padding: 40px;
  }

  .sidebar_tekst_wrapper {
    display: flex;
    align-items: center;
    gap: 16px;
  }

  .sidebar_tekst_wrapper:hover {
    cursor: pointer;
  }

  .sidebarcontainer h2 {
    color: var(--primary-color);
  }

  .vinyl_sidebar {
    color: var(--primary-color);
    text-decoration: underline;
  }

  .sidebar_ikoner {
    height: 24px;
    width: 24px;
  }
</style>
