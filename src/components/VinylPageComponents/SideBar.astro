---
import "/src/styles/global.css";
---

<div class="sidebarcontainer">
  <h2>Find a Topic:</h2>
  <div class="sidebarlink_wrapper">
    <slot />
  </div>
</div>

<style>
  .sidebarcontainer {
    /*position: fixed;*/
    position: sticky;
    top: 0;
    background-color: #fff;
    grid-column: 1 / 2;
    height: 100vh;
    width: 280px;
    padding: 80px 56px 0 24px;
  }

  .sidebarcontainer h2 {
    color: var(--primary-color);
  }

  @media (max-width: 768px) {
    .sidebarcontainer {
      display: none;
    }
  }
</style>
