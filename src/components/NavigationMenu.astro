      color: #fff;
      text-decoration: none;
      padding: 5px 10px;
    }

    .nav-item a:hover,
    .nav-item a:focus {
      color: #fa8072;
    }

    .dropdown {
      padding: 0;
      display: none;
      list-style: none;
      position: absolute;
      top: 100%;
      left: 0;
      background-color: rgb(12, 12, 12);
      box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
