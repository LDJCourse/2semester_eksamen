      font-size: 2em;
      text-decoration: none;
      margin-right: 40px; /* Adjust the spacing as needed */
    }

    .nav-links {
      list-style: none;
      display: flex;
      flex: 1;
      justify-content: flex-start;
      align-items: center;
      gap: 40px; /* Adjust the spacing between nav items */
    }

    .nav-item {
      position: relative;
    }

    .nav-item a {
      font-family: "Fjalla One", sans-serif;
      font-weight: 400;
