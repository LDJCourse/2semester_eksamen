        <a href="/sustainability">SUSTAINABILITY</a>
      </li>
      <li class="nav-item"><a href="/about">ABOUT US</a></li>
    </ul>

    <a class="button_wrapper" id="buttonId" href="/getaquote">
      <button class="quote-button">Get a Quote</button>
      <img
        src="/arrow-right.svg"
        alt=""
        class="button-icon hide"
        id="arrow_icon"
      />
    </a>
  </div>
</nav>

<script>
  const buttonArrow = document.querySelector("#buttonId");
  const arrowIcon = document.querySelector("#arrow_icon");
  buttonArrow.addEventListener("mouseover", hideRemove);

  function hideRemove() {
    arrowIcon.classList.remove("hide");
    buttonArrow.addEventListener("mouseout", addRemove);
  }
  function addRemove() {
    arrowIcon.classList.add("hide");
  }

  const activeLink = window.location.pathname;
  // console.log("test " + activeLink);
  // Add underline on active link in navigation bar

  document.querySelectorAll("a").forEach((link) => {
    const linkPath = new URL(link.href).pathname;
    // if (link.href.includes(`${activeLink}`)) {
    //   link.classList.add("active_link");
    // }
    if (linkPath === activeLink) {
      link.classList.add("active_link");
    }
  });
</script>
<style>
  .navbar {
    display: none;
  }
  @media (min-width: 768px) {
    .active_link {
      border-bottom: 3px solid white;
      padding-bottom: 10px;
    }
    .navbar {
      display: block;
      position: sticky;
      top: 0;
      left: 0;
