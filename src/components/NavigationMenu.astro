    }

    .dropdown li {
      width: 150px;
    }

    .dropdown li a {
      display: block;
      padding: 10px;
      color: #fff;
    }

    .dropdown li a:hover {
      background-color: var(--primary-color);
    }

    .nav-item:hover .dropdown {
      display: block;
    }

    .dropdown-icon {
      margin-left: 5px;
    }

    .hide {
      display: none;
      transition: 0.3s ease-in-out all;
    }

    button {
      cursor: pointer;
    }

