];
---

<section class="container">
  <h1>OUR RECENT PROJECTS</h1>
  <div class="img_section">
    {
      test.map((t) => (
        <div class="img_container">
          <img src="/frontpageimg.png" alt="" />
        </div>
      ))
    }
  </div>
</section>
<style>
  .container {
    padding: 20px;
    margin: 100px 0;
  }

  h1 {
    text-align: center;
    margin: 40px 0;
  }

  .img_section {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 10px;
    position: relative;
    height: 100%;
  }

  img.container {
    width: 50%;
  }

  img {
    max-width: 100%;
  }

  @media (min-width: 768px) {
    .container {
      display: flex;
      flex-direction: column;
      align-items: center;
    }

    h1 {
      margin: 100px 0;
    }

    .img_section {
      width: 50%;
      grid-template-columns: repeat(4, 1fr);
      place-items: center;
    }
  }
</style>
