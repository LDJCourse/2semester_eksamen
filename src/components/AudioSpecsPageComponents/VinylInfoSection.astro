<style>
  h3,
  p,
  ul,
  li {
    color: var(--primary-color);
  }
  .vinyl_info_container {
    background-image: url(/img/rpm_green_bg.webp);
    background-repeat: no-repeat;
    height: auto;
    display: grid;
    grid-template-columns: 1fr;
    padding: 80px 16px;
    gap: 40px;
  }

  .text_section {
    background: var(--secondary-color);
    color: var(--primary-color);
    padding: 20px;
  }

  ul {
    margin-bottom: 40px;
  }

  li {
    margin-bottom: 8px;
  }

  @media (min-width: 768px) {
    .vinyl_info_container {
      background-image: url(/img/rpm_green_bg.webp);
      background-repeat: no-repeat;
      height: auto;
      display: grid;
      gap: 32px;
      grid-template-columns: 3fr 4fr;
      padding: 80px 160px;
    }

    .text_section {
    }

    ul {
      margin-bottom: 40px;
    }
  }
</style>
