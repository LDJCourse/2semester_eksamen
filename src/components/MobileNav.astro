<style>
  .toggle {
    position: fixed;
    top: 40px;
    right: 40px;
    z-index: 7;
    cursor: pointer;
    display: block;
  }

  .page {
    position: absolute;
    top: 40px;
    left: 20px;
    z-index: 2;
  }

  .page h1 {
    all: unset;
    font-family: "Roboto Condensed", sans-serif;
    color: #242527;
    font-size: 44px;
    line-height: 46px;
  }

  .page > h1 span {
    font-size: 50px;
  }

  .toggle a {
    text-decoration: none;
    font-size: 40px;
    cursor: pointer;
    color: white;
  }

  .menu {
    margin: 0;
    padding: 0;
    position: fixed;
    top: 0;
    right: -100%;
    width: 100%;
    height: 100%;
    background: #242527;
    z-index: 5;
    transition: 1s;
  }

  .menu ul {
    margin: 0;
    padding: 0;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    text-align: center;
  }

  ul li {
    list-style: none;
  }

  .menu ul li a {
    padding: 10px;
    display: inline-block;
    font-family: verdana;
    font-size: 2em;
    text-decoration: none;
    text-transform: uppercase;
    color: #fcf2e2;
  }

  .menu ul li a:hover {
    opacity: 0.6;
  }

  .menu.active {
    right: 0;
    overflow: auto;
  }
  @media (min-width: 768px) {
    .toggle {
      display: none;
    }
  }
</style>

<script>
  // Open navbar
  const nav_btn = document.querySelector(".toggle");
  const dropdown_menu = document.querySelector(".menu");

  nav_btn.addEventListener("click", handleOpenNavbar);

  // Handle open navbar
  function handleOpenNavbar() {
    dropdown_menu.classList.toggle("active");
  }
</script>
